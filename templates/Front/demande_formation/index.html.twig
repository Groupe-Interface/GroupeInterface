{% extends 'Back/baseBack.html.twig' %}

{% block content %}
    <h1>DemandeFormation index</h1>

    <table id="datatable" class="table table-striped table-bordered" style="width:100%" >
        <thead>
            <tr>
                <th>Id</th>
                <th>NomPrenom</th>
                <th>NumTel</th>
                <th>Email</th>
                <th>Nationalite</th>
                <th>Ville</th>
                <th>FormationDemande</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for demande_formation in demande_formations %}
            <tr>
                <td>{{ demande_formation.id }}</td>
                <td>{{ demande_formation.NomPrenom }}</td>
                <td>{{ demande_formation.numTel }}</td>
                <td>{{ demande_formation.email }}</td>
                <td>{{ demande_formation.Nationalite }}</td>
                <td>{{ demande_formation.ville }}</td>
                <td>{{ demande_formation.FormationDemande }}</td>
                <td>
                    <a href="{{ path('demande_formation_show', {'id': demande_formation.id}) }}"><i class="fa fa-eye"></i></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <script>
        $(document).ready( function () {
            $('#table_id').DataTable();
        } );</script>
{% endblock %}
