<div style="width: 100%; display:flex; justify-content: center">
    {{ form_start(form) }}
    {{ form_widget(form.Niveau,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'niveau'}})}}
    {{ form_widget(form.FormationDemandee,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'Formation Demande'}})}}
    {{ form_widget(form.nomPrenom,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'nom et prenom'}})}}
    {{ form_widget(form.numTel,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'Num Tel'}})}}
    {{ form_widget(form.email,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'Email'}})}}
    {{ form_widget(form.Pays,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'Pays'}})}}
    {{ form_widget(form.Ville,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'ville'}})}}
    <div style="width: 100%; display:flex; justify-content: center">
        <button class="btn btn-primary btn-sm shadow-sm mt-2 mb-2">
            <i class="fa fa-plus-square-o"></i>
            {{ button_label|default('Save') }}</button>
    </div>
    {{ form_end(form) }}

</div>
