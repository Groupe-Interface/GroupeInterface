{% extends 'Back/baseBack.html.twig' %}

{% block content %}

    <h1>Contact index</h1>


    <table id="datatable" class="table table-striped table-bordered" style="width:100%" >
        <thead>
            <tr>
                <th>Id</th>
                <th>NomPrenom</th>
                <th>NumTel</th>
                <th>Email</th>
                <th>Pays</th>
                <th>Ville</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.nomPrenom }}</td>
                <td>{{ contact.numTel }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.pays }}</td>
                <td>{{ contact.ville }}</td>
                <td>{{ contact.message }}</td>
                <td>
                    <a href="{{ path('contact_show', {'id': contact.id}) }}"><i class="fa fa-eye"></i></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <script>
        $(document).ready( function () {
            $('#table_id').DataTable();
        } );</script>
{% endblock %}
