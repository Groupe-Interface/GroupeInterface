{% extends 'Back/baseBack.html.twig' %}

{% block content %}
    <h1>La liste des d√©partement</h1>
    </br>
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <table id="datatable" class="table table-striped table-bordered" style="width:100%" >
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>NomDepartement</th>
                        <th>AbDepartement</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for departement in departements %}
                        <tr>
                            <td>{{ departement.id }}</td>
                            <td>{{ departement.nomDepartement }}</td>
                            <td>{{ departement.abDepartement }}</td>
                            <td>
                                <a href="{{ path('admin_departement_show', {'id': departement.id}) }}"><i class="fa fa-eye"></i> </a>
                                <a href="{{ path('admin_departement_edit', {'id': departement.id}) }}"><i class="fa fa-edit"></i></a>
                                <a href="{{ path('admin_departement_delete', {'id': departement.id}) }}"><i class="fa fa-trash-o"></i></a>

