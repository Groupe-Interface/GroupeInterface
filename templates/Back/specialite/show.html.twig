{% extends 'Back/baseBack.html.twig' %}

{% block content%}
    <h1>Specialite</h1>
    <div style="width: 100%; display:flex; justify-content: flex-end">
        <a href="{{ path('specialite_edit', {'id': specialite.id}) }}">
            <button type="button" class="btn-sm shadow-sm btn btn-primary mt-2 mb-2 mr-2">
                <i class="fa fa-edit"></i>
            </button></a>
        {{ include('Back/specialite/_delete_form.html.twig') }}
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ specialite.id }}</td>
            </tr>
            <tr>
                <th>NomSpecialite</th>
                <td>{{ specialite.nomSpecialite }}</td>
            </tr>
            <tr>
                <th>DureeSpecialite</th>
                <td>{{ specialite.dureeSpecialite }}</td>
            </tr>
            <tr>
                <th>abrev_specialite</th>
                <td>{{ specialite.abrevSpecialite }}</td>
            </tr>
            <tr>
                <th>NbrSemestre</th>
                <td>{{ specialite.nbrSemestre }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path("specialite_index") }}" class="d-none d-sm-inline-block btn btn-sm shadow-sm">
        <button type="button" class="btn btn-dark">
            <i class="fa fa-arrow-circle-left">  </i>  retour
        </button>
    </a>
{% endblock %}
