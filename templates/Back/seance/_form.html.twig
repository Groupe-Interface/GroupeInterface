<div class="x_panel">
    <div class="x_content">


        <div class="col-md-12 col-sm-12  form-group">
            {{ form_start(form) }}
            {{ form_widget(form.dateSeance,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'date seance'}})}}
            {{ form_widget(form.heureDebut,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'heure Debut'}})}}
            {{ form_widget(form.heureFin,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'heure Fin'}})}}
            {{ form_widget(form.nbrMinute,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'minute'}})}}
            {{ form_widget(form.enseignant,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'minute'}})}}
            {{ form_widget(form.classe,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'minute'}})}}


            <div style="width: 100%; display:flex; justify-content: flex-end">
                <button class="btn btn-primary btn-sm shadow-sm mt-2 mb-2">
                    <i class="fa fa-plus-square-o"></i>
                    {{ button_label|default('Save') }}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>