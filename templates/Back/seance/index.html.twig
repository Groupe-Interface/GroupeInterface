{% extends 'Back/baseBack.html.twig' %}
{% block content %}
    <h1>Seance index</h1>
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">

            <table id="datatable" class="table table-striped table-bordered" style="width:100%" >
        <thead>
            <tr>
                <th>Id</th>
                <th>DateSeance</th>
                <th>HeureDebut</th>
                <th>HeureFin</th>
                <th>NbrMinute</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for seance in seances %}
            <tr>
                <td>{{ seance.id }}</td>
                <td>{{ seance.dateSeance ? seance.dateSeance|date('Y-m-d') : '' }}</td>
                <td>{{ seance.heureDebut ? seance.heureDebut|date('H:i:s') : '' }}</td>
                <td>{{ seance.heureFin ? seance.heureFin|date('H:i:s') : '' }}</td>
                <td>{{ seance.nbrMinute }}</td>
                <td>
                    <a href="{{ path('seance_show', {'id': seance.id}) }}"><i class="fa fa-eye"></i> </a>
                    <a href="{{ path('seance_edit', {'id': seance.id}) }}"><i class="fa fa-edit"></i></a>
                    <a href="{{ path('seance_delete', {'id': seance.id}) }}"><i class="fa fa-trash-o"></i></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            <div style="width: 100%; display:flex; justify-content: flex-end">
                <a href="{{ path('seance_new') }}"><button type="button" class="btn  btn-success btn-sm shadow-sm mt-2 mb-2"><i class="fa fa-plus-square-o">   </i>  Ajouter</button></a>
            </div>
        </div>
    </div>
</div>
{% endblock %}