{% extends 'Back/baseBack.html.twig' %}

{% block listeMatiere %}
<ul class="nav child_menu">

    {% for matiere in matieres %}
        {% if matiere.idSpecialite == classe.idSpecialite%}
            <li><a href="{{ path('etudiant_matiere_show', {'id': matiere.id}) }}">{{ matiere.nomMatiere }}</a></li>

        {% endif %}
    {% endfor %}

</ul>
{% endblock %}
{% block content %}
    <h1>Matiere index</h1>
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">

                <table id="datatable" class="table table-striped table-bordered" style="width:100%" >

                    <thead>
                    <tr>
                        <th>Nom du Matiére</th>
                        <th>Coefficient du Matiére</th>
                        <th>Nom du Spécialité</th>
                        <th>Département</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for matiere in matieres %}
                        <tr>
                            <td>{{ matiere.nomMatiere }}</td>
                            <td>{{ matiere.coeffMatiere }}</td>
                            <td>{{ matiere.idSpecialite }}</td>
                            <td>{{ matiere.idSpecialite.departement }}</td>
                            <td>
                               <!-- <a href="{ path('matiere_show', {'id': matiere.id}) }}"><i class="fa fa-eye"></i> </a>-->
                                <a href="{{ path('admin_matiere_edit', {'id': matiere.id}) }}"><i class="fa fa-edit"></i></a>
                                {{ include('Back/matiere/_delete_form.html.twig') }}


                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div style="width: 100%; display:flex; justify-content: flex-end">
                    <a href="{{ path('admin_matiere_new') }}"><button type="button" class="btn  btn-success btn-sm shadow-sm mt-2 mb-2"><i class="fa fa-plus-square-o">   </i>  Ajouter</button></a>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready( function () {
            $('#table_id').DataTable();
        } );</script>
{% endblock %}
