{% extends 'Back/baseBack.html.twig' %}

{% block User %}
    {% if is_granted ('ROLE_ETUDIANT') %}
    {% for etudiant in etudiants %}
    {% if user.email == etudiant.emailEtudiant %}
        {{ etudiant.nomEtudiant}} {{ etudiant.prenomEtudiant}}
    {% endif%}
    {% endfor %}
    {% endif%}
    {% if is_granted ('ROLE_ENSEIGNANT') %}
    {% for enseignant in enseignants%}
    {% if user.email == enseignant.emailEnseignant %}
        {{ enseignant.nomEnseignant}} {{ enseignant.prenomEnseignant}}
    {% endif%}
    {% endfor %}
    {% endif%}
    {% if is_granted ('ROLE_ADMIN') %}
    {% for admin in admins%}
    {% if user.email == admin.emailAdmin %}
        {{ admin.nomAdmin}} {{ admin.prenomAdmin}}
    {% endif%}
    {% endfor %}
    {% endif%}
{% endblock %}
    {% block JsCssProfile %}
        <link href="{{ asset('css/profil.css') }}" rel="stylesheet">
    {% endblock %}
    {% block Profile %}

        <script src="{{ asset('https://kit.fontawesome.com/b99e675b6e.js')}}"></script>

        <div class="wrapper">
            <div class="left">
                {% if is_granted ('ROLE_ETUDIANT') %}
                {% for etudiant in etudiants %}
                {% if user.email == etudiant.emailEtudiant %}
                <img src="{{ asset('img/about-1.jpg')}}" alt="user" width="100">
                <h4>{{ etudiant.nomEtudiant}} {{ etudiant.prenomEtudiant}}</h4>
                <p>{{ etudiant.classe}}</p>
                <p>{{ etudiant.cin}}</p>
            </div>
            <div class="right">
                <div class="info">
                    <h3>Information</h3>
                    <div class="info_data">
                        <div class="data">
                            <h4>Email</h4>
                            <p>{{ etudiant.emailEtudiant }}</p>
                        </div>
                        <div class="data">
                            <h4>Phone</h4>
                            <p>Etudiant :{{ etudiant.phoneEtudiant}}</p>
                            <p>En cas d'urgence: {{ etudiant.phoneUrgence}}</p>

                        </div>

                    </div>
                </div>
                <div class="projects">
                    <div class="projects_data">
                        <div class="data">
                            <h4>Nationalite</h4>
                            <p>{{ etudiant.nationalite}}</p>
                        </div>
                        <div class="data">
                            <h4>Lieu </h4>
                            <p>{{ etudiant.payeEtudiant}}, {{ etudiant.villeEtudiant }}</p>
                        </div>
                        <div class="data">
                            <h4>Date de Naissance </h4>
                            <p>{{ etudiant.dateNaiss ? etudiant.dateNaiss|date('Y-m-d') : ''   }}</p>
                        </div>
                    </div>
                </div>


                {% endif%}
                {% endfor %}
                {% endif%}
                {% if is_granted ('ROLE_ENSEIGNANT') %}
                {% for enseignant in enseignants%}
                {% if user.email == enseignant.emailEnseignant %}

                <h4>{{ enseignant.nomEnseignant}} {{ enseignant.prenomEnseignant}}</h4>
                <p>{{ enseignant.matiere}}</p>
            </div>
            <div class="right">
                <div class="info">
                    <h3>Information</h3>
                    <div class="info_data">
                        <div class="data">
                            <h4>Email</h4>
                            <p>{{ enseignant.emailEnseignant }}</p>
                        </div>
                        <div class="data">
                            <h4>Phone</h4>
                            <p>{{ enseignant.phoneEnseignant}}</p>
                        </div>

                    </div>
                </div>
                <div class="projects">
                    <div class="projects_data">
                        <div class="data">
                            <h4>Lieu </h4>
                            <p>{{enseignant.adresseEnseignant}}, {{ enseignant.villeEnseignant }}</p>
                        </div>

                    </div>
                </div>


                {% endif%}
                {% endfor %}
                {% endif%}
                {% if is_granted ('ROLE_ADMIN') %}
                {% for admin in admins%}
                {% if user.email == admin.emailAdmin %}

                <h4>{{ admin.nomAdmin}} {{ admin.prenomAdmin}}</h4>

            </div>
            <div class="right">
                <div class="info">
                    <h3>Information</h3>
                    <div class="info_data">
                        <div class="data">
                            <h4>Email</h4>
                            <p>{{ admin.emailAdmin }}</p>
                        </div>
                    </div>
                </div>
                {% endif%}
                {% endfor %}
                {% endif%}
            </div>
        </div>
    {% endblock %}
