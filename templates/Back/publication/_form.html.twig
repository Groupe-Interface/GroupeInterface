<div class="x_panel">
    <div class="x_content">


        <div class="col-md-12 col-sm-12  form-group">
            {{ form_start(form) }}
            {{ form_widget(form.descriptionPublication,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'Description Publication'}})}}
            {{ form_widget(form.nbComment,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'nombre de commentaire'}})}}
            {{ form_widget(form.nbVue,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'Nombre de vue'}})}}
            {{ form_widget(form.idCours,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'Cour'}})}}
            {{ form_widget(form.idUser,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'User'}})}}

            <div style="width: 100%; display:flex; justify-content: flex-end">
                <button class="btn btn-primary btn-sm shadow-sm mt-2 mb-2">
                    <i class="fa fa-plus-square-o"></i>
                    {{ button_label|default('Save') }}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
