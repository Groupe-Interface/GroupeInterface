<form style="display: inline-block" method="post" action="{{ path('publication_delete', {'id': publication.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">

    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ publication.id) }}">
    <button >
        <i class="fa fa-trash"></i>

    </button>
</form>