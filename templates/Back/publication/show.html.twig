{% extends 'Back/baseBack.html.twig' %}

{% block content %}
    <h1>Publication</h1>
    <div style="width: 100%; display:flex; justify-content: flex-end">
        <a href="{{ path('publication_edit', {'id': publication.id}) }}">
            <button type="button" class="btn-sm shadow-sm btn btn-primary mt-2 mb-2 mr-2">
                <i class="fa fa-edit"></i>
            </button></a>
        {{ include('Back/publication/_delete_form.html.twig') }}
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ publication.id }}</td>
            </tr>
            <tr>
                <th>DescriptionPublication</th>
                <td>{{ publication.descriptionPublication }}</td>
            </tr>
            <tr>
                <th>DatePublication</th>
                <td>{{ publication.datePublication ? publication.datePublication|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>NbComment</th>
                <td>{{ publication.nbComment }}</td>
            </tr>
            <tr>
                <th>NbVue</th>
                <td>{{ publication.nbVue }}</td>
            </tr>


        </tbody>
    </table>
    <a href="{{ path("publication_index") }}" class="d-none d-sm-inline-block btn btn-sm shadow-sm">
        <button type="button" class="btn btn-dark">
            <i class="fa fa-arrow-circle-left">  </i>  retour
        </button>
    </a>
{% endblock %}
