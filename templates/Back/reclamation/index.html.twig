{% extends 'Back/baseBack.html.twig' %}

{% block content %}
    <h1>Reclamation index</h1>
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <table id="datatable" class="table table-striped table-bordered" style="width:100%" >
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>TitleReclamation</th>
                        <th>DescriptionReclamation</th>
                        <th>DateReclamation</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for reclamation in reclamations %}
                        <tr>
                            <td>{{ reclamation.id }}</td>
                            <td>{{ reclamation.titleReclamation }}</td>
                            <td>{{ reclamation.descriptionReclamation }}</td>
                            <td>{{ reclamation.dateReclamation ? reclamation.dateReclamation|date('Y-m-d') : '' }}</td>
                            <td>
                                <a href="{{ path('reclamation_show', {'id': reclamation.id}) }}"><i class="fa fa-eye"></i> </a>
                                <a href="{{ path('reclamation_edit', {'id': reclamation.id}) }}"><i class="fa fa-edit"></i></a>
                                <a href="{{ path('reclamation_delete', {'id': reclamation.id}) }}"><i class="fa fa-trash-o"></i></a>

                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div style="width: 100%; display:flex; justify-content: flex-end">
                    <a href="{{ path('reclamation_new') }}"><button type="button" class="btn  btn-success btn-sm shadow-sm mt-2 mb-2"><i class="fa fa-plus-square-o">   </i>  Ajouter</button></a>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

