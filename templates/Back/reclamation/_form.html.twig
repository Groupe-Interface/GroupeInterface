<div class="x_panel">
    <div class="x_content">


        <div class="col-md-12 col-sm-12  form-group">
            {{ form_start(form) }}
            {{ form_widget(form.titleReclamation,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'Title'}})}}
            {{ form_widget(form.descriptionReclamation,{'attr': {'class': 'form-control w-100 mt-2 mb-2','placeholder': 'Description'}})}}
            <div class="row m-2">
                {{form_widget(form.dateReclamation.day,{'attr': {'class': 'form-control w-25 m-2'}})}}
                {{form_widget(form.dateReclamation.month,{'attr': {'class': 'form-control w-25 m-2'}})}}
                {{form_widget(form.dateReclamation.year,{'attr': {'class': 'form-control w-25 m-2'}})}}
            </div>
        </div>



        <div style="width: 100%; display:flex; justify-content: flex-end">
            <button class="btn btn-primary btn-sm shadow-sm mt-2 mb-2">
                <i class="fa fa-plus-square-o"></i>
        {{ button_label|default('Save') }}</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>

